    console.log("ðŸ“… Date sÃ©lectionnÃ©e :", date);

    try {
        const response = await fetch(`/api/matchs?date=${date}`);
        const data = await response.json();

        console.log("ðŸ“¦ DonnÃ©es JSON rÃ©cupÃ©rÃ©es :", data);

        if (!data.events || data.events.length === 0) {
            console.log("âš ï¸ Aucun match trouvÃ© pour cette date");
            alert("Aucun match trouvÃ© pour cette date.");
            afficherClubs([]); // on vide la carte
            return;
        }

        // Liste des clubs Ã  domicile (noms en minuscules)
        const clubsDomicile = data.events.map(e => e.homeTeam.toLowerCase());
        console.log("ðŸ  Clubs Ã  domicile (JSON) :", clubsDomicile);

        // Liste des noms de ta base
        const nomsClubsBase = clubs.map(c => c.name.toLowerCase());
        console.log("ðŸ“Œ Noms des clubs dans la base :", nomsClubsBase);

        // Filtrer les clubs qui jouent Ã  domicile
        const clubsAffiches = clubs.filter(c => 
            clubsDomicile.includes(c.name.toLowerCase())
        );

        console.log("âœ… Clubs affichÃ©s sur la carte :", clubsAffiches.map(c => c.name));

        afficherClubs(clubsAffiches);

        if (clubsAffiches.length === 0) {
            alert("Aucun club de ta base ne joue Ã  domicile ce jour-lÃ .");
        }

    } catch (err) {
        console.error("âŒ Erreur lors du chargement des matchs :", err);
        alert("Impossible de charger les donnÃ©es.");
    }
}

document.getElementById('load-matches').addEventListener('click', () => {
    const date = document.getElementById('match-date').value;
    if (date) {
        chargerMatchs(date);
    } else {
        alert("Merci de choisir une date !");
    }
});

</script>


